<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#E0E0E0">

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_edit_24" />


        <RelativeLayout
            android:id="@+id/rl_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape">

            <ImageView
                android:id="@+id/image_gender"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_person_24"
                app:tint="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_circle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Umair Khan"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#C4C4C4"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_vera_edge_big" />

        </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:alpha="0.6"

            android:background="@android:color/transparent"
            android:text="Home Number"
            android:cursorVisible="true"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" >

            <requestFocus/>

        </EditText>


    </LinearLayout>

    <TextView
        android:id="@+id/tvSNData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:alpha="0.5"
        android:text="SN:142d11"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/tvMAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSNData"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:alpha="0.5"
        android:text="MAC Address"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/tvFirmware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMAC"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        android:alpha="0.5"
        android:text="Firmware"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />


    <TextView

        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFirmware"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:alpha="0.5"
        android:text="Model"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>